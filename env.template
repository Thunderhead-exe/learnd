# Learnd MCP Server Configuration
# Copy this file to .env and update the values below with your actual credentials

# ============================================================================
# MISTRAL AI CONFIGURATION (Required)
# ============================================================================
# Get your API key from: https://mistral.ai/
MISTRAL_API_KEY=your_mistral_api_key_here
MISTRAL_MODEL=mistral-large-latest

# ============================================================================
# QDRANT CLOUD CONFIGURATION (Required)
# ============================================================================
# Sign up for free at: https://cloud.qdrant.io
# Create a cluster and get your URL and API key
QDRANT_URL=https://your-cluster-name.gcp.cloud.qdrant.io:6333
QDRANT_API_KEY=your_qdrant_cloud_api_key_here

# ============================================================================
# EMBEDDING CONFIGURATION
# ============================================================================
# Model for generating embeddings (sentence-transformers compatible)
EMBEDDING_MODEL=all-MiniLM-L6-v2
# Collection name in Qdrant for storing concepts
COLLECTION_NAME=learnd-concepts

# ============================================================================
# LAYER MANAGEMENT SETTINGS
# ============================================================================
# Maximum number of concepts in primary (fast-access) layer
PRIMARY_LAYER_CAPACITY=1000
# Frequency threshold for promoting concepts to primary layer
PROMOTION_THRESHOLD=10
# Frequency threshold for demoting concepts to secondary layer
DEMOTION_THRESHOLD=2

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
# Host and port for the MCP server
SERVER_HOST=localhost
SERVER_PORT=8000
# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ============================================================================
# ADVANCED SETTINGS (Optional)
# ============================================================================
# Clustering algorithm: kmeans, dbscan, or similarity
CLUSTERING_METHOD=kmeans
# Similarity threshold for clustering
CLUSTER_SIMILARITY_THRESHOLD=0.8
# Maximum concepts per cluster
MAX_CLUSTER_SIZE=50
# Frequency decay rate for time-based forgetting
FREQUENCY_DECAY_RATE=0.95
